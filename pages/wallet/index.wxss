.charge-input{
	width:100%;
	height:96rpx;
	background-color: #fff;
	padding-left: 32rpx;
	position: relative;
}
.charge-label{
	position: absolute;
	right: 82rpx;
	top:0;
	width: 50rpx;
	height: 96rpx;
	line-height: 96rpx;
	color: #333;
	font-size: 32rpx;
	text-align: right;
}

.charge-choice{
	width:100%;
	height: 62rpx;
	margin-top: 20rpx;
}

.charge-choice-btn{
	width: 136rpx;
	height: 62rpx;
	line-height: 62rpx;
	box-sizing: border-box;
	border: 1px solid #e2e2e2;
	background-color: transparent;
	color: #333;
	text-align: center;
	font-size: 28rpx;
	float:left;
	margin-left: 20rpx;
	border-radius: 10rpx;
}

.charge-choice-btn-active{
	border:1px solid #56bd64;
	background-color: #56bd64;
	color: #fff;
}

.charge-form{
	width:100%;
	height: auto;
	padding-left: 32rpx;
	padding-right: 32rpx;
	padding-top: 32rpx;
	box-sizing: border-box;
}
