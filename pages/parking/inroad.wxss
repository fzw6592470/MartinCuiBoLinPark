.h2{
	width:100%;
	height:80rpx;
	box-sizing: border-box;
	line-height: 80rpx;
	padding-left:54rpx;	
	font-size: 24rpx;
	color:#666;
	position: relative;
	font-weight: bold;
}
.h2:before{
	content:'';
	position: absolute;
	top: 34rpx;
	left: 32rpx;
	z-index: 101;
	background-color: #56bd64;
	border-radius: 50%;
	width:12rpx;
	height:12rpx;
}

.inroad-picker{
	width:100%;
	height: 288rpx;
	margin-top: 36rpx;
}

.inroad-picker-item{
	height: 96rpx;
	line-height: 68rpx;
	color: #4d3333;
	text-align: center;
	font-size: 26rpx;	
}
.inroad-fee{
	width:100%;
	box-sizing: border-box;
	font-size: 32rpx;
	color: #333;
	height: 96rpx;
	line-height: 96rpx;
	padding-left: 32rpx;
	font-weight: bold;
}
.inroad-feenum{
	width:auto;
	color: #ff2e3d;
	display:inline;
}

.code-list{
	width:100%;
	height: 96rpx;
	line-height: 96rpx;
	position: relative;
	overflow: hidden;
	padding-left: 32rpx;
	padding-right: 32rpx;
	box-sizing: border-box;
}
.code-list .code-item{
	float:left;
	box-sizing: border-box;
	width: 16.667%;
	height: 96rpx;
	line-height: 96rpx;
	text-align: center;
	border: 2rpx solid #e2e2e2;
	border-right: 0 none;
	background: #fff;
	font-size: 24rpx;
}
.code-item.c-active{
	border: 2rpx solid #56bd64;
}
.code-item:first-child{
	border-top-left-radius: 10rpx;
	border-bottom-left-radius: 10rpx;
}
.code-item:last-child{
	border-right: 1px solid #e2e2e2;
	border-top-right-radius: 10rpx;
	border-bottom-right-radius: 10rpx;
}
.code-item:last-child.c-active{
	border: 1px solid #56bd64;
}
