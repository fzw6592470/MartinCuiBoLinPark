.no-record{
	width:100%;
	height: auto;
}
.no-record-img{
	width: 176rpx;
	height:219rpx;
	margin: 318rpx auto 0;
	display:block;
}

.no-record-title{
	width: 100%;
	height: 84rpx;
	line-height: 84rpx;
	margin-top: 66rpx;
	text-align:center;
	font-size: 32rpx;
	color: #333;
	font-weight: bold;
}
.record-show{
	width:100%;
	height:100%;
}
.record_tab{
	box-sizing: border-box;
	width:100%;
	padding-top: 20rpx;
	height: 96rpx;
	background-color: #fff;
}
.record_tab_item{
	width:50%;
	height: 76rpx;
	line-height: 76rpx;
	display: inline-block;
	font-size: 32rpx;
	color: #333;
	font-weight: bold;
	text-align: center;
}
.record_tab_item.active{
	color: #56bd64;
}
.record_tab_item.active .record-text-decoration{
	box-sizing: border-box;
	padding-bottom: 10rpx;
	width:auto;
	height: 50rpx;
	line-height: 50rpx;
	border-bottom: 2rpx solid #56bd64;
	display:inline;
}

.record-list{
	width: 100%;
	height: 92%;
}
.record-day{
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	padding-left: 32rpx;
	box-sizing: border-box;
	font-size:24rpx;
	color:#333;
	border-bottom: 2rpx solid #e2e2e2;
}

.record-item{
	width: 100%;
	height: 150rpx;
	box-sizing: border-box;
	background: #fff;
}

.record-icon{
	width: 142rpx;
	height: 150rpx;
	padding: 35.5rpx 31.5rpx;
	box-sizing: border-box;
	display: inline-block;
}

.record-icon-icon{
	width: 79rpx;
	height: 79rpx;
}
.record-text{
	box-sizing: border-box;
	display: inline-block;
	height: 150rpx;
	border-bottom: 2rpx solid #e2e2e2;
	position: relative;
	width:80%;
	float:right;
	padding-top:20rpx;
	padding-bottom:27rpx;
}
.record-btn{
	position: absolute;
	right: 32rpx;
	top: 48rpx;
	width: 128rpx;
	height: 56rpx;
	line-height: 56rpx;
	font-size: 32rpx;
	color:#fff;
	text-align: center;
	padding:0;
}
.record-title{
	width:100%;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 32rpx;
	color: #333;
	font-weight: bold;
}
.record-parking-name{
	width:100%;
	height: 46rpx;
	line-height: 46rpx;
	font-size: 28rpx;
	color:#888;
}
.record-times{
	width:auto;
	color: #888;
	font-size: 28rpx;
	display:inline;
	font-weight: normal;
}
